@model AtmManagement.Models.Customers

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<form action="/AdminPanel/AddMoney" method="post">

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.AccountNo)
        <div class="form-group">
            @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Money" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "AdminSection")
</div>
